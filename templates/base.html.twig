<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>
    <body>
        <header>
        <nav>
            <a href="{{ path('app_home') }}">Accueil</a>
            {# <a href="{{ path('app_article_index') }} #}
            {# <a href="{{ path('app_registration') }}">Register</a> #}

            {% if app.user %}
                <a href="{{ path('app_products') }}">Produits</a>
                {# <a href="{{ path('app_admin') }}">Admin</a> #}
                
                <a href="{{ path('app_user_show', {'id': app.user.id}) }}">Profil</a>
                {# Le panier est au bon endroit mais ne fonctionne pas #}
                {# <a href="{{ path('app_cart') }}">Panier</a> #}
                <a href="{{ path('app_logout') }}">Déconnexion</a>
            {% else %}
                <a href="{{ path('app_register') }}">S'inscrire</a>
                <a href="{{ path('app_login') }}">Se Connecter</a>
            {% endif %}
            {% if is_granted("ROLE_ADMIN") %}
                <a href="{{ path('app_admin') }}">Admin</a>
            {% endif %}
        </nav>
        </header>
        <main>
            {% block body %}{% endblock %}
        </main>
    </body>
</html>
