{% extends 'base.html.twig' %}

{% block title %}Hello CartController!
{% endblock %}

{% block body %}
    <div class="bg-light p-3">
        <h1>Votre panier</h1>
    </div>

    {% if items I length > 0%}
        <table class="table">
        <thead>
            <tr>
                <th> Produit </th>
                <th> Prix </th>
                <th> Quantité </th>
                <th> Total </th>
                <th> </th>
            </tr>
        </thead>
        <tbody>

        //Boucle pour: afficher le titre, le prix, la quantité et le prix + la quantité

            {% for item in items %}
                <tr>
                <td>{{item.product.title}}</td>
                <td>{{item.product.price}}</td>
                <td>{{item.quantity}}</td>
                <td>{{item.product.price * item.quantity}}</td>
                <td>
                    <a href="#" class="btn btn-danger btn-sm">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
                </tr>
            {% endfor %}
        </tbody>



    {% else %}
    {% endif %}
    <p>Votre panier est vide !</p>
{% endblock %}
